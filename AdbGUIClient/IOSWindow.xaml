<Window x:Class="AdbGUIClient.IOSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IOSWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center">
            <ComboBox Name="cbbDevices"
                      SelectedIndex="0"
                      ItemsSource="{Binding Path=Devices}"
                      SelectedItem="{Binding Path=SelectedDevice}"
                      Width="120"></ComboBox>
            <TextBlock Margin="5,0,0,0">Bundle ID:</TextBlock>
            <TextBox Width="300"
                     Margin="5,0,0,0"
                     Text="{Binding Path=BundleID}"
                     Name="txtBundleID"></TextBox>
            <Button Width="80"
                    Margin="5,0,0,0"
                    Click="btnRefresh_Click">Refresh</Button>
        </StackPanel>
        <TabControl Grid.Row="1"
                    Name="tcContainer">
        </TabControl>
    </Grid>
</Window>
